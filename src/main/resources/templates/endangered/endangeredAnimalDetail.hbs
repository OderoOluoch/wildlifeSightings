{{#partial "content"}}
    <div class="container">
        {{#each animalSightings}}
            {{ id }}
        {{/each}}

        <div class="card det">
            <div class="card-header">
                Animal details
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Name of the Endangered Animal:  {{endangeredAnimal.name}}
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col order-last">
                <div>
                    <a class="btn btn-outline-warning" href="#">Update Animal Name</a>
                </div>
            </div>
            <div>
                <form method="post" action="/endangered/{{endangeredAnimal.id}}/delete">
                    <button class="btn btn-outline-warning">Delete Animal</button>
                </form>
            </div>>
            <div class="col order-first">
                <div>
                    <a class="btn btn-outline-warning" href="/sightings/new_ends">Report an endangered Animal Sighting</a>
                </div>
            </div>
        </div>
    </div>


{{/partial}}

{{> layout.hbs}}