{{#partial "content"}}
    <div class="container">
        {{#each animalSightings}}
            {{ id }}
        {{/each}}

        <div class="card det">
            <div class="card-header">
                Animal details
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Name of the Endangered Animal:  {{endangeredAnimal.name}}
                </h5>
            </div>
        </div>
        <div class="row">
            <div>
                <form method="post" action="/endangered/{{endangeredAnimal.id}}/delete">
                    <button class="btn btn-outline-warning">Delete Animal</button>
                </form>
            </div>>
            <div class="col order-first">
                <div>
                    <a class="btn btn-outline-warning" href="/sightings/new_ends">Report an endangered Animal Sighting</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {{#each animalSightings}}

            <div class="card det">
                <div class="card-header">
                    Sights for this animal - {{id}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Animal ID : {{animal_id}}
                    </h5>
                    <h5 class="card-title">
                        Location  ID : {{location_id}}
                    </h5>
                    <h5 class="card-title">
                        Ranger ID : {{ranger_id}}
                    </h5>
                    <h5 class="card-title">
                        Time Sighted : {{sighted_at}}
                    </h5>
                </div>
            </div>
        {{/each}}
    </div>


{{/partial}}

{{> layout.hbs}}