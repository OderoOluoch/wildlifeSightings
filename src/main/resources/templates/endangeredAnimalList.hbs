{{#partial "content"}}


    <ol class="list-group list-group-numbered">
        {{#each endangeredAnimals }}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">
                        <h1>{{name}}</h1>
                    </div>
                </div>
                <span class="badge bg-warning">
                <a href="/endangered/{{id}}">View Details</a>
            </span>
            </li>
        {{/each}}
    </ol>
    <div>
        <a class="btn btn-outline-warning" href="/animals/new">Add an Animal to our Database</a>
    </div>
{{/partial}}

{{> layout.hbs}}