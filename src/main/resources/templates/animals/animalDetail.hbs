{{#partial "content"}}


    {{#each animalSightings}}
        {{ id }}
        {{/each}}
    <div class="container">

        <div class="card det">
            <div class="card-header">
               Animal details
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Animal Name : {{animal.name}}
                </h5>
            </div>
        </div>


        <div class="row">
            <div class="col order-last">
                <div>
                    <a class="btn btn-outline-warning" href="#">Update Animal Name</a>
                </div>
            </div>
            <div class="col">
                <div>
                    <form method="post" action="/animals/{{animal.id}}/delete">

                        <button class="btn btn-outline-warning">Delete Animal</button>
                    </form>

                </div>
            </div>
            <div class="col order-first">
                <div>

                    <a class="btn btn-outline-warning" href="/sightings/new_non_ends">Report Animal Sighting</a>
                </div>
            </div>
        </div>


    </div>

{{/partial}}

{{> layout.hbs}}