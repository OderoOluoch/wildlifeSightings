{{#partial "content"}}
    <div class="container">
        <div class="card det">
            <div class="card-header">
                Ranger details
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Animal Name : {{ranger.name}}
                </h5>
                <h5 class="card-title">
                    Animal Name : {{ranger.email}}
                </h5>
                <h5 class="card-title">
                    Animal Name : {{ranger.badge}}
                </h5>
            </div>
        </div>


        <div class="row">

            <div>
                <form method="post" action="/ranger/{{ranger.id}}/delete">

                    <button class="btn btn-outline-warning">Delete Ranger</button>
                </form>

            </div>
            <div class="col order-first">
                <div>
                    <a class="btn btn-outline-warning" href="/sightings/new_non_ends">Report Animal Sighting</a>
                </div>
            </div>
        </div>


    </div>

    <div class="container">
        {{#each rangerSightings}}

            <div class="card det">
                <div class="card-header">
                    Sights for this animal - {{id}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Animal ID : {{animal_id}}
                    </h5>
                    <h5 class="card-title">
                        Location  ID : {{location_id}}
                    </h5>
                    <h5 class="card-title">
                        Ranger ID : {{ranger_id}}
                    </h5>
                    <h5 class="card-title">
                        Time Sighted : {{sighted_at}}
                    </h5>
                </div>
            </div>
        {{/each}}
    </div>

{{/partial}}

{{> layout.hbs}}